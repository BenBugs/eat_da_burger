 
<div class="text-center mt-3">
    <img src="/assets/bt_logo.gif" alt="Burger Thing Logo" width="80" height="80">
</div>

<h1 class="text-center mt-4">Here's our menu.</h1>


<!-- Flickity HTML init -->
<div class="m-4">
<div class="burger-carousel">
<div class="gallery js-flickity"
  data-flickity-options='{ "wrapAround": true }'>
  <div class="gallery-cell image-1 bg-atts"></div>
  <div class="gallery-cell image-2 bg-atts"></div>
  <div class="gallery-cell image-3 bg-atts"></div>
  <div class="gallery-cell image-4 bg-atts"></div>
  <div class="gallery-cell image-5 bg-atts"></div>
</div>
</div>
</div>


<form class="create-form text-center mt-4 mb-4">
    <div class="form-group">
      <div class="burger-input-border"></div>
        <input type="text" id="burger-input" name="name">
    </div>
      </div>
    
    <button type="submit" class="btn btn-warning mt-3">PLACE ORDER</button>
</form>


<ul>
    {{#each burger}}
    {{#unless is_eaten}}
    {{> eat-block is_eaten=true}}
    {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burger}}
    {{#if is_eaten}}
    {{> trash-block is_eaten=false}}
    {{/if}}
    {{/each}}
</ul>

